{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "cucumber",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.feature",
          "match": "\\b(Feature|Background|Scenario|Scenario Outline|Examples|Given|When|Then|But|And)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.feature",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.feature",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.feature"
}
